<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:paddingLeft="15sp"
                android:paddingTop="18sp"
                android:text="@string/restaurant_star" />

            <TextView
                style="?textNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.44"
                android:paddingLeft="15sp"
                android:text="@string/restaurant_message_note"/>

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:paddingLeft="65sp"
            android:paddingTop="8sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

        </LinearLayout>

        <ImageView
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="268dp"
                android:layout_height="67dp"
                android:layout_weight="0.71"
                android:paddingLeft="15sp"
                android:paddingTop="15sp"
                android:text="@string/restaurant_member_message" />

            <Button
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:drawable/ic_popup_sync"
                android:backgroundTint="?android:attr/colorEdgeEffect" />
        </LinearLayout>

        <ImageView
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center"
            android:orientation="horizontal">

            <QuickContactBadge
                android:id="@+id/quickContactBadge4"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="39"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="?textContent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/member_message_content"
                    android:layout_weight="0.59" />

                <TextView
                    style="?textNote"
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.41"
                    android:text="@string/message_date"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center"
            android:orientation="horizontal">

            <QuickContactBadge
                android:id="@+id/quickContactBadge4"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="39"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="?textContent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:layout_weight="0.59" />

                <TextView
                    style="?textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.41"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center"
            android:orientation="horizontal">

            <QuickContactBadge
                android:id="@+id/quickContactBadge4"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="39"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="?textContent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:layout_weight="0.59" />

                <TextView
                    style="?textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.41"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center"
            android:orientation="horizontal">

            <QuickContactBadge
                android:id="@+id/quickContactBadge4"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="39"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="?textContent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:layout_weight="0.59" />

                <TextView
                    style="?textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.41"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

    </LinearLayout>

</ScrollView>
