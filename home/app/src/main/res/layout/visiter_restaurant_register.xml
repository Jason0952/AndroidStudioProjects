<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />
        </android.support.design.widget.AppBarLayout>

        <TextView
            style="?textTitle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/restaurant_register"
            android:textColor="#303f9f"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_name"/>

                <EditText
                    android:id="@+id/enterrestaurantname"
                    android:layout_width="295dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_account" />

                <EditText
                    android:id="@+id/enterrestaurantaccount"
                    android:layout_width="295dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_password" />

                <EditText
                    android:id="@+id/enterrestaurantpassword"
                    android:layout_width="295dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_confirm" />

                <EditText
                    android:id="@+id/entermakesurerestaurantpassword"
                    android:layout_width="250dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_telephone" />

                <EditText
                    android:id="@+id/entertelephone"
                    android:layout_width="295dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_area"/>

                <Spinner
                    android:id="@+id/areaselect"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_weight="0.87"
                    android:paddingLeft="30dp" />

                <Spinner
                    android:id="@+id/regionselect"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_weight="0.50"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="337dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_address"
                    android:layout_weight="0.16" />

                <EditText
                    android:id="@+id/enteraddress"
                    android:layout_width="290dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_weight="0.8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.03"
                    android:text="@string/restaurant_register_category" />

                <Spinner
                    android:id="@+id/categoryselect"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:paddingLeft="27dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.62"
                    android:text="TextView"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_register_email"/>

                <EditText
                    android:id="@+id/enterrestaurantemail"
                    android:layout_width="285dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:ems="10"
                android:inputType="date"
                android:visibility="invisible" />

            <TextView
                style="?textContent"
                android:layout_width="331dp"
                android:layout_height="31dp"
                android:gravity=""
                android:text="@string/restaurant_register_pictures" />

            <TextView
                style="?textContent"
                android:layout_width="332dp"
                android:layout_height="33dp"
                android:gravity=""
                android:text="@string/restaurant_register_note" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/picture1"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_weight="0.02" />

            <ImageButton
                android:id="@+id/picture2"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_weight="0.02" />

            <ImageButton
                android:id="@+id/picture3"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_weight="0.02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/picture4"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_weight="0.02" />

            <ImageButton
                android:id="@+id/picture5"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_weight="0.02"/>

            <ImageButton
                android:id="@+id/picture6"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_weight="0.02"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                style="?textContent"
                android:id="@+id/restaurantsignin"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_register_btn"
                android:layout_weight="0.49" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>