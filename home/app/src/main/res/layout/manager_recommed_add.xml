<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/addDialogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                style="?textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_place_add"
                android:paddingRight="10sp"/>

            <Button
                style="?textContent"
                android:id="@+id/addComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_complete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_name"
                android:paddingLeft="3sp" />

            <EditText
                android:id="@+id/enterplacename"
                android:layout_width="225dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="0.14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_address"
                android:paddingLeft="1sp"/>

            <EditText
                android:id="@+id/enterplaceaddress"
                android:layout_width="263dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="0.12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_telephone"
                android:paddingLeft="3sp"/>

            <EditText
                android:id="@+id/enterplacetelephone"
                android:layout_width="263dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="0.18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_distance"
                android:paddingLeft="1sp" />

            <EditText
                android:id="@+id/enterdistance"
                android:layout_width="263dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="0.12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_time" />

            <EditText
                android:id="@+id/entertime"
                android:layout_width="228dp"
                android:layout_height="123dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            style="?textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommend_picture"
            android:paddingLeft="35sp"
            android:layout_weight="0.10" />

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="35sp"
            android:gravity="left">

            <ImageButton
                android:id="@+id/placeimage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_add" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
