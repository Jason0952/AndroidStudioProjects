<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealsimg1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/mealsimg2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealsimg3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/mealsimg4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealsimg5"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/mealsimg6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="369dp"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <TextView
            style="?textContent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/menu"
            android:paddingLeft="5sp"
            android:textColor="#303f9f" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="28sp"
            android:orientation="horizontal">

            <TextView
                style="?textContent"
                android:id="@+id/menu_txt"
                android:layout_width="290dp"
                android:layout_height="102dp"
                android:paddingLeft="5sp"
                android:paddingTop="3sp"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/menu_pic"
                android:layout_width="290dp"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:paddingLeft="5sp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/menuimg1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="102dp" />

                <ImageView
                    android:id="@+id/menuimg2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="102dp" />

                <ImageView
                    android:id="@+id/menuimg3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="102dp" />
            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorButtonNormal" />

        <TextView
            style="?textContent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/popular_meal"
            android:paddingLeft="5sp"
            android:textColor="#303f9f" />

        <TextView
            style="?textContent"
            android:id="@+id/recommend_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:paddingTop="3sp" />

    </LinearLayout>

</ScrollView>