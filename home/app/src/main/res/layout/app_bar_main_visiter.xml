<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/visiter_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/visiterContentMain"
        layout="@layout/content_main"
        android:visibility="visible"/>
    <include
        android:id="@+id/visiterLogin"
        layout="@layout/visiter_login"
        android:visibility="gone"/>
    <include
        android:id="@+id/visiterSearch"
        layout="@layout/common_search"
        android:visibility="gone"/>
        <include
            android:id="@+id/visiterSearchResult"
            layout="@layout/common_search_card_view"
            android:visibility="gone"/>
            <include
                android:id="@+id/visiterSearchDetail"
                layout="@layout/visiter_search_information"
                android:visibility="gone"/>

    <include
        android:id="@+id/visiterSetting"
        layout="@layout/common_setting"
        android:visibility="gone"/>
        <include
            android:id="@+id/visiterOpinion"
            layout="@layout/common_opinion"
            android:visibility="gone"/>
    <include
        android:id="@+id/visiterSignup"
        layout="@layout/visiter_registered"
        android:visibility="gone"/>

    <include
        android:id="@+id/visiterForgetpassword"
        layout="@layout/visiter_forgetpassword"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/visiter_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</android.support.design.widget.CoordinatorLayout>
