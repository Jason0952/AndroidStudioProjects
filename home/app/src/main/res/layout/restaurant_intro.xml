<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10sp"
                android:text="@string/res_into_create" />

            <Button
                style="?textContent"
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_complete" />

        </LinearLayout>

        <TextView
            style="?textNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_into_point"
            android:paddingLeft="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_name"
                android:paddingLeft="3sp" />

            <EditText
                android:text=""
                android:id="@+id/enterrestaurantname"
                android:layout_width="265dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="0.01"
            android:orientation="horizontal"
            android:paddingLeft="22sp"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5sp"
                android:text="@string/res_into_category" />

            <Spinner
                android:id="@+id/categoryselect"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.07" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7sp"
                android:text="@string/res_into_area" />

            <Spinner
                android:id="@+id/areaselect"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08" />

            <Spinner
                android:id="@+id/regionselect"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_address"
                android:paddingLeft="1sp"/>

            <EditText
                android:text=""
                android:id="@+id/enteraddress"
                android:layout_width="263dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.13">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_transpot" />

            <EditText
                android:text=""
                android:id="@+id/entertransportation"
                android:layout_width="220dp"
                android:layout_height="86dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_telephone"
                android:paddingLeft="3sp"/>

            <EditText
                android:text=""
                android:id="@+id/entertelephone"
                android:layout_width="263dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="0.05" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_time" />

            <EditText
                android:text=""
                android:id="@+id/entertime"
                android:layout_width="220dp"
                android:layout_height="84dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_sit"
                android:paddingLeft="3sp"/>

            <EditText
                android:text=""
                android:id="@+id/entersit"
                android:layout_width="263dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_remarks"
                android:paddingLeft="3sp" />

            <EditText
                android:text=""
                android:id="@+id/enterremark"
                android:layout_width="256dp"
                android:layout_height="84dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.20">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_into_about"
                android:paddingLeft="3sp" />

            <EditText
                android:text=""
                android:id="@+id/enterabout"
                android:layout_width="253dp"
                android:layout_height="123dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <TextView
            style="?textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_into_avatar"
            android:paddingLeft="25sp"
            android:layout_weight="0.10" />

        <LinearLayout
            android:layout_width="146dp"
            android:layout_height="102dp"
            android:orientation="horizontal"
            android:paddingLeft="15sp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/addrestaurantpicture"
                android:layout_width="102dp"
                android:layout_height="102dp"
                app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>

        <TextView
            style="?textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_into_menu"
            android:paddingTop="10sp"
            android:paddingLeft="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="?textNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25sp"
                android:paddingTop="10sp"
                android:text="@string/res_into_note" />
            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:paddingLeft="25sp"
                android:orientation="horizontal">
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">
                    <RadioButton
                        style="?textContent"
                        android:id="@+id/textButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/res_into_text"
                        android:layout_weight="0.12" />

                    <RadioButton
                        style="?textContent"
                        android:id="@+id/picButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/res_into_picture" />
            </RadioGroup>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="28sp"
                android:orientation="horizontal">

                <EditText
                    android:text=""
                    android:id="@+id/addmenuText"
                    android:layout_width="300dp"
                    android:layout_height="94dp"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:id="@+id/addmenuPic"
                    android:layout_width="290dp"
                    android:layout_height="102dp"
                    android:orientation="horizontal"
                    android:paddingLeft="5sp"
                    android:visibility="invisible">

                    <ImageButton
                        android:id="@+id/addmenuimg1"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        app:srcCompat="@android:drawable/ic_menu_add" />

                    <ImageButton
                        android:id="@+id/addmenuimg2"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:visibility="invisible"
                        app:srcCompat="@android:drawable/ic_menu_add" />

                    <ImageButton
                        android:id="@+id/addmenuimg3"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:visibility="invisible"
                        app:srcCompat="@android:drawable/ic_menu_add" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="23sp">

                <TextView
                    style="?textContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_into_popularity" />

                <EditText
                    android:id="@+id/enterrecommend"
                    android:layout_width="215dp"
                    android:layout_height="84dp"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25sp"
                android:text="@string/res_into_mealpicture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:paddingLeft="25sp">

                <ImageButton
                    android:id="@+id/addmealimg1"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/addmealimg2"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/addmealimg3"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:paddingLeft="25sp">

                <ImageButton
                    android:id="@+id/addmealimg4"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/addmealimg5"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/addmealimg6"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />
            </LinearLayout>

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="25sp"
                android:paddingTop="5sp"
                android:text="@string/res_into_resimg" />

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:paddingLeft="25sp"
                android:paddingTop="13sp"
                android:text="@string/res_into_outsideimg"/>

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:paddingLeft="25sp">

                <ImageButton
                    android:id="@+id/outdoorimg1"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/outdoorimg2"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/outdoorimg3"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />
            </LinearLayout>

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25sp"
                android:paddingTop="15sp"
                android:text="@string/res_into_insideimg" />

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:paddingLeft="25sp">

                <ImageButton
                    android:id="@+id/indoorimg1"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/indoorimg2"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/indoorimg3"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>