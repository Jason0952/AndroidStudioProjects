<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/confirmDialogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10sp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:paddingRight="5sp"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:text="@string/audit_point1"
                android:layout_weight="0.05" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8sp"
            android:paddingTop="5sp"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audit_time"/>

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5sp"
                android:text="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3sp"
                android:text="@string/audit_resname" />

            <TextView
                style="?textContent"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5sp"
                android:text="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3sp"
                android:text="@string/audit_telephone" />

            <TextView
                style="?textContent"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5sp"
                android:text="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7sp"
                android:text="@string/audit_area" />

            <TextView
                style="?textContent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:paddingLeft="5sp"
                android:text="123" />

            <TextView
                style="?textContent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:text="123" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="1sp"
                android:text="@string/audit_address" />

            <TextView
                style="?textContent"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5sp"
                android:text="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7sp"
                android:text="@string/audit_category" />

            <TextView
                style="?textContent"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:paddingLeft="5sp"
                android:text="123"/>

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textSize="18sp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audit_email" />

            <TextView
                style="?textContent"
                android:id="@+id/enterrestaurantname"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="123"
                android:paddingLeft="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:weightSum="1">

            <TextView
                style="?textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audit_picture"/>

            <TextView
                style="?textNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audit_point2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="308dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:paddingLeft="3sp"
            android:paddingTop="5sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.54"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="308dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="3sp"
            android:paddingTop="5sp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="316dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:paddingLeft="90sp"
            android:paddingTop="5sp"
            android:orientation="horizontal">

            <Button
                style="?textContent"
                android:id="@+id/Approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="@string/audit_ok"/>

            <Button
                style="?textContent"
                android:id="@+id/notApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="@string/audit_notok"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>


