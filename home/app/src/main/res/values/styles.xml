<resources>
    <attr name="textTitle" format="reference" />
    <attr name="textContent" format="reference" />
    <attr name="textNote" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textTitle">@style/middle_title_text</item>
        <item name="textContent">@style/middle_content_text</item>
        <item name="textNote">@style/middle_note_text</item>
    </style>

    <style name="AppTheme.Big" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Big.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textTitle">@style/big_title_text</item>
        <item name="textContent">@style/big_content_text</item>
        <item name="textNote">@style/big_note_text</item>
    </style>

    <!-- MEDIUM FONT SIZE -->
    <style name="middle_title_text">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="middle_content_text">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="middle_note_text">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- LARGE FONT SIZE -->
    <style name="big_title_text">
        <item name="android:textSize">33sp</item>
    </style>
    <style name="big_content_text">
        <item name="android:textSize">23sp</item>
    </style>
    <style name="big_note_text">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
